<div class="page-header">
  <div class="page-header-content">
    <div class="page-title">
      <h1>{{t 'Clients'}}</h1>
    </div>
  </div>

  <div class="breadcrumb-line breadcrumb-line-component">
    <ul class="breadcrumb">
      <li>
        {{#link-to 'index'}}
          <i class="icon-home2 position-left"></i> {{t 'Home'}}
        {{/link-to}}
      </li>
      <li>
        {{#link-to 'clients'}}
          {{t 'Clients'}}
        {{/link-to}}
      </li>
      <li class="active">{{model.client.name}}</li>
    </ul>
    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
  </div>
</div>

<div class="content">

  <div class="panel panel-flat">
    <div class="panel-heading">
      <h5 class="panel-title">
        <span class="text-muted">{{t 'Client'}} -</span> {{model.client.name}}
      </h5>
    </div>
    <div class="panel-body">
      <form {{action 'save' on 'submit'}}>
        <fieldset class="content-group">
          <legend class="text-bold">{{t 'Edit client'}}</legend>

          <div class="form-group">
            <label>{{t 'Key'}}</label>
            {{input type='text' disabled=true class='form-control' value=model.client.id}}
          </div>

          <div class="form-group">
            <label>{{t 'Creator'}}</label>
            {{#power-select search=(action 'search') selected=model.client.creator onchange=(action (mut selectedUser)) as |user|}}
              {{user.displayName}}
            {{/power-select}}
          </div>

          <div class="form-group">
            <label>{{t 'Editors'}}</label>
            {{#power-select-multiple search=(action 'search') selected=model.client.editors onchange=(action (mut model.client.editors)) as |user|}}
              {{user.displayName}}
            {{/power-select-multiple}}
          </div>

          <div class="form-group">
            <button class="btn btn-default">
              {{t 'Save'}}
            </button>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</div>