<div class="form-group">
  <label class="col-lg-2 control-label text-right">{{t 'Name'}}</label>
  <div class="col-lg-10">
    <div class="input-group">
      <span class="input-group-addon"><i class="icon-paragraph-left2"></i></span>
      {{textarea focus-out=(action 'setDirty') rows="1" cols="5" class="form-control" value=data.name placeholder=(t "Enter name here...")}}
    </div>
  </div>
</div>

<div class="form-group">
  <label class="col-lg-2 control-label text-right">{{t 'Image'}}</label>
  <div class="col-lg-10 thumbnail" style="max-width:450px;margin-left:10px;">
    {{#p-upload url=(concat (api) "/files") class='thumb' success=(action 'addImage')}}
      {{#if data.file}}
        <img src="{{media data.file.id width=450 height=300}}" alt="Image">
      {{else}}
        <img src="/images/campaign-placeholder.png" alt="Upload an image">
      {{/if}}
    {{/p-upload}}
    <div class="caption text-center">
      <span class="text-muted">{{t 'Click on image to edit.'}}</span>
    </div>
  </div>
</div>
