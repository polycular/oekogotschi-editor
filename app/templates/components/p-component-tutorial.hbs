{{#each data.texts as |text index|}}
  <div class="form-group">
    <label class="col-lg-2 control-label text-right">{{t 'Title'}}</label>
    <div class="col-lg-10">
      <div class="input-group">
        <span class="input-group-addon"><i class="icon-file-text2"></i></span>
        {{textarea focus-out=(action 'setArray' data.headlines index) rows="1" cols="5" class="form-control" value=(get (index-of data.headlines index) 'value') placeholder=(t "Enter the tutorial title here…") }}
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="col-lg-2 control-label text-right">{{t 'Text'}}</label>
    <div class="col-lg-10">
      <div class="input-group">
        <span class="input-group-addon"><i class="icon-file-text2"></i></span>
        {{textarea focus-out=(action 'setArray' data.texts index) rows="5" cols="5" class="form-control" value=(get (index-of data.texts index) 'value') placeholder=(t "Enter the tutorial message here…") }}
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2 text-left">
      <button type="button" class="btn btn-danger btn-xs" {{action 'removeText' index}}>
        <i class="fa fa-times position-left"></i> {{t 'Remove Text'}}
      </button>
    </div>
  </div>

  <hr>
{{/each}}

<div class="form-group">
  <div class="col-lg-10 col-lg-offset-2 text-left">
    <button type="button" class="btn btn-default" {{action 'addText'}}>
      <i class="icon-plus2 position-left"></i> {{t 'Add Text'}}
    </button>
  </div>
</div>

{{#each medias as |media|}}
  <div class="media">
    <div class="media-header">
      <span class="media-type">{{t media.type}}</span>
      <span class="media-control">
        <a {{action 'remove' media}} class="icon-bin"></a>
      </span>
    </div>
    <div class="media-component">
      {{component (concat 'p-component-media-' media.type) data=media setDirty=(action 'setDirty')}}
    </div>
  </div>
{{/each}}

{{#unless hasMedia}}
<div class="media-add form-group">
  <label class="col-lg-2 control-label text-right">{{t 'Insert Media'}}</label>
  <div class="col-lg-10">
  {{#each mediaOptions as |mediaOption|}}
    <button {{action 'addMedia' data mediaOption.type}} type="button" class="btn">
      <i class="fa {{mediaOption.icon}}"></i>
      <span>{{t mediaOption.name}}</span>
    </button>
  {{/each}}
  </div>
</div>
{{/unless}}
