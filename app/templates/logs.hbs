<div class="page-header">
  <div class="page-header-content">
    <div class="page-title">
      <h1>{{t 'Logs'}}</h1>
    </div>
  </div>

  <div class="breadcrumb-line breadcrumb-line-component">
    <ul class="breadcrumb">
      <li>
        {{#link-to 'index'}}
          <i class="icon-home2 position-left"></i> {{t 'Home'}}{{/link-to}}
      </li>
      <li class="active">{{t 'Logs'}}</li>
    </ul>
    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
  </div>
</div>

<div class="content">

  <div class="panel panel-flat">
    <div class="panel-heading">
      <h5 class="panel-title">
        {{t 'Logs'}}
      </h5>
    </div>
    <div class="table-responsive">
      <table class="table table-xs table-responsive">
        <thead>
        <tr>
          <th>#</th>
          <th>{{t 'Message'}}</th>
          <th>{{t 'Created At'}}</th>
        </tr>
        </thead>
        <tbody>
        {{#each model as |log index|}}
          <tr>
            <td>{{increment index}}</td>
            <td>{{log.message}}</td>
            <td>{{moment-from-now log.createdAt}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
    <div class="panel-body text-right">
      {{p-pagination total=model.meta.count size=size page=page data=model gotoPage=(action 'goto')}}
    </div>
  </div>
</div>
