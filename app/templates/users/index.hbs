<div class="page-header">
  <div class="page-header-content">
    <div class="page-title">
      <h1>{{t 'Users'}}</h1>
    </div>
  </div>

  <div class="breadcrumb-line breadcrumb-line-component">
    <ul class="breadcrumb">
      <li>
        {{#link-to 'index'}}
          <i class="icon-home2 position-left"></i> {{t 'Home'}}{{/link-to}}
      </li>
      <li class="active">{{t 'Users'}}</li>
    </ul>
    <a class="breadcrumb-elements-toggle"><i class="icon-menu-open"></i></a>
  </div>
</div>

<div class="content">

  <div class="panel panel-flat">
    <div class="panel-heading">
      <h5 class="panel-title">
        {{t 'Users'}}
      </h5>
      <div class="heading-elements">
        <form class="heading-form" {{action 'filter' on='submit'}}>
          <div class="form-group has-feedback">
            {{input type='search' name='filter' value=filterText class='form-control' placeholder=(t 'Searchâ€¦')}}
            <div class="form-control-feedback">
              <i class="fa fa-search text-size-base text-muted"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
    <div class="table-responsive">
      <table class="table">
        <thead>
        <tr>
          <th>#</th>
          <th>{{t 'Name'}}</th>
          <th>{{t 'Email'}}</th>
          <th>{{t 'Joined'}}</th>
        </tr>
        </thead>
        <tbody>
        {{#each model as |user index|}}
          <tr>
            <td>{{increment index}}</td>
            <td>
              {{#link-to 'users.edit' user.id}}
                {{user.displayName}}
              {{/link-to}}
            </td>
            <td>{{user.email}}</td>
            <td>{{format-date user.createdAt format='LL'}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
    <div class="panel-body text-right">
      {{p-pagination total=model.meta.count size=size page=page data=model gotoPage=(action 'goto')}}
    </div>
  </div>
</div>